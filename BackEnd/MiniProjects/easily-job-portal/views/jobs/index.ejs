<!-- views/jobs/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Jobs</title>
</head>
<body>
  <h1>All Jobs</h1>
  <ul>
    <% jobs.forEach(job => { %>
      <li>
        <a href="/jobs/<%= job.id %>"><%= job.jobdesignation %> at <%= job.companyname %></a>
      </li>
    <% }); %>
  </ul>
</body>
</html>
