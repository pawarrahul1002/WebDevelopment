<!-- views/layouts/mainLayout.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle %></title>
  <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
  <header>
    <div class="logo">
      <h1><a href="/">Easily Job Portal</a></h1>
    </div>
    <nav>
      <ul>
        <li><a href="/jobs">All Jobs</a></li>
        <% if (!currentUser) { %>
          <li><a href="/auth/login">Login</a></li>
          <li><a href="/auth/register">Register</a></li>
        <% } else { %>
          <li>Welcome, <%= currentUser.name %>! (<a href="/auth/logout">Logout</a>)</li>
        <% } %>
      </ul>
    </nav>
  </header>

  <main>
    <!-- Include the content specific to each view -->
    <%= content %>
  </main>

  <footer>
    <p>&copy; <%= new Date().getFullYear() %> Easily Job Portal. All rights reserved.</p>
  </footer>
</body>
</html>
